@model EditUserRoleViewModel

<h2>Изменение ролей пользователя</h2>

<form asp-action="EditUserRole" method="post">
    <input type="hidden" asp-for="UserId" />
    
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" disabled />
    </div>

    <div class="form-group">
        <label>Роли:</label>
        @foreach (var role in Model.AllRoles)
        {
            <div>
                @{
                    var isChecked = Model.UserRoles.Contains(role.Name) ? "checked" : "";
                }

                <input type="checkbox" name="roles" value="@role.Name" @isChecked />
                <label>@role.Name</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Users" class="btn btn-secondary">Отмена</a>
</form>
