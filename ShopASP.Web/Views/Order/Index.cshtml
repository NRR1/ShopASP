@model IEnumerable<ShopASP.Web.Models.OrderViewModel>

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>UserID</th>
            <th>OrderDate</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.UserID</td>
                <td>@order.OrderDate</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.OrderID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@order.OrderID">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@order.OrderID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Product</a>