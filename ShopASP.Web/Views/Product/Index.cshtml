@model IEnumerable<ShopASP.Web.Models.ProductListViewModel>

<h2>Product List</h2>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Products.First().ID</td>
                <td>@product.Products.First().Name</td>
                <td>@product.Products.First().Cost</td>
                <td>@product.Products.First().Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Products.First().ID">Details</a> |
                    <a asp-action="Edit" asp-route-id="@product.Products.First().ID">Edit</a> |
                    <a asp-action="Detele" asp-route-id="@product.Products.First().ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary">Add New Product</a>