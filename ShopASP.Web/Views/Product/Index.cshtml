@model ShopASP.Web.Models.ProductViewModel

@{
    ViewData["Title"] = "Список продуктов";
}

<h2>Продукты</h2>

<p>
    <a asp-action="Create">Добавить товар</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().pName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().pDescription)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().pCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products.First().pQuantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model.Products){
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.pName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pDescription)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.pQuantity)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.pID">Details</a>
                </td>
            </tr>
        }   
    </tbody>
</table>